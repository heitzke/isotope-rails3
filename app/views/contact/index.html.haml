- content_for :title do
  Contact &ndash; isotope|eleven

= interior_header 'Contact Us'

.interior
  .fixed_content
    %h3  For business inquiries, please contact us directly or just fill out our simple contact form.
    .content-left.contact
      - unless current_user && current_user.admin?
        = form_tag :action => 'create' do |f|
          = render 'form'

      - if current_user && current_user.admin?
        %table
          %thead
            %th Contact Name
            %th Contact Email
            %th Contact Company
            %th Contact Note
          - @contacts.each do |contact|
            %tr
              %td= link_to contact.nickname, contact_path(contact)
              %td= contact.email
              %td= contact.company
              %td= contact.text
          /- form_for contact do |f|
          /  = render :partial => 'contact_form', :locals => { :f => f }
    .content-right.contact
      %p
        529 Beacon Pkwy W - Suite 105
        %br 
        Birmingham, AL 35209
        %br
        p: 877.476.8671
        %br 
        f: 205.943.5760
        %br 
        e:
        = link_to 'info@isotope11.com', 'mailto:info@isotope11.com'
    .clearfix
