!!! Strict
%html
  %head
    %title
      = yield :title
    = render :partial => 'shared/meta'
    = stylesheet_link_tag 'reset-min', 'screen'
    = javascript_include_tag :ckeditor 
    = auto_discovery_link_tag :atom, posts_path(:atom)
    = yield :head_javascripts
    = render :partial => 'shared/google_analytics_script'
  %body.internal
    #main-wrap
      #header-internal
        #title-bar-internal
          = render :partial => "shared/header"
      #content-wrap
        #content
          = render :partial => "shared/flashes"
          = yield
          %br.clear 
    = render :partial => "shared/footer"
    = render :partial => 'shared/javascripts'
