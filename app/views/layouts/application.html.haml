- conditional_html 'en-US' do
  %head
    %title
      = content_for?(:title) ? yield(:title) : "isotope|eleven"
    = render partial: 'layouts/head_bits'

  %body.clearfix{ class: "action-#{params[:action]} controller-#{params[:controller]}" }
    #top_area
      #swoosh
      #clouds.gradient
      = render partial: 'layouts/who_we_are'
      = yield :top_area

    = yield

    = render partial: 'layouts/footer'
    = render partial: 'layouts/responsive/javascripts'
    = yield :javascripts
    :javascript
      $(document).ready(function(){
        var iframe_content = $('<iframe frameborder=0 height="320px" marginheight=0 marginwidth=0 scrolling="no" src="http://maps.google.com/maps?q=529+Beacon+Parkway+West,+Birmingham,+AL&hl=en&sll=37.0625,-95.677068&sspn=45.822921,78.486328&oq=529+Beacon+Parkwa&hnear=529+Beacon+Pkwy+W,+Birmingham,+Alabama+35209&t=h&ie=UTF8&hq=&z=14&iwloc=A&ll=33.475357,-86.822355&output=embed" width="100%"></iframe>');
        $('#map_frame').html(iframe_content);
      });
