= div_for post do
  .blog_post
    .blog_info_top
      .author_image
        = image_tag post.user.avatar.url(:thumb)
      .title
        %h2= link_to_unless_current h(post.title), post
        .author
          %h3
            by:
            = link_to_unless_current post.user, about_path(post.user) 
          %p
            = post.created_at.to_formatted_s(:long_ordinal)
      .clearfix
    - if local_assigns[:share]
      %span.share= share_this
    .blog_content= post.body.html_safe
    = link_to_unless_current "", "#{url_for(post)}#disqus_thread", "data-disqus-identifier" => post.slug
    -if show_disqus && params["disqus"] == "true"
      #disqus_thread
      :javascript
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'isotope11'; // required: replace example with your forum shortname
        var disqus_identifier = '#{post.slug}';

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
- content_for :javascripts do
  :javascript
    hljs.initHighlightingOnLoad();
