- content_for(:title, "Blog &ndash; isotope|eleven".html_safe)

= interior_header("Blog<span id='rss_link'>#{link_to(image_tag('feed-icon-28x28.png'), posts_path(:atom))}</span>".html_safe)

.interior
  .fixed_content
    = render @posts, { show_disqus: false, show_disqus_comment_counts: true }
    = will_paginate @posts

    - if current_user
      = link_to 'New Post', new_post_path
  = render :partial => 'disqus_index_comments'

- content_for :javascripts do
  :javascript
    hljs.initHighlightingOnLoad();
