.edit_post
  = form_for(@post) do |f|
    - if @post.errors.any?
      #error_explanation
        %h2= pluralize(@post.errors.count, "error") + "prohibited this post from being saved:"
        %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

    .field
      = f.label :title
      = f.text_field :title
    .field
      = f.label :slug
      = f.text_field :slug
    .field
      = f.label :body
      = f.cktext_area :body, :toolbar => 'Full', :width => 1000, :height => 200
    .clear  
    .actions
      = f.submit

